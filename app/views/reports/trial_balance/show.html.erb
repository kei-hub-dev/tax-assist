<div class="page">
  <div class="narrow">
    <h1 class="page-title">確認ページ</h1>
    <div class="year-banner">
      選択中の会計年度:<span class="year-pill"><%= current_period.accounting_year %></span>
    </div>

    <div class="table-wrap" style="margin-top:16px;">
      <table class="table">
        <thead>
          <tr>
            <th>勘定科目</th>
            <th style="text-align:right;">借方</th>
            <th style="text-align:right;">貸方</th>
            <th style="text-align:right;">差額（借方－貸方）</th>
          </tr>
        </thead>
        <tbody>
          <% if @rows.any? %>
            <% @rows.each do |r| %>
              <tr>
                <td><%= r["account_name"] %></td>
                <td style="text-align:right;"><%= number_with_delimiter(r["debit"]) %></td>
                <td style="text-align:right;"><%= number_with_delimiter(r["credit"]) %></td>
                <td style="text-align:right;"><%= number_with_delimiter(r["balance"]) %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" style="text-align:center;color:#666;">対象データがありません</td>
            </tr>
          <% end %>
        </tbody>
        <% if @rows.any? %>
          <tfoot>
            <tr class="sum-row <%= @balanced ? 'sum-ok' : 'sum-ng' %>">
              <td>合計</td>
              <td style="text-align:right;"><%= number_with_delimiter(@total_debit) %></td>
              <td style="text-align:right;"><%= number_with_delimiter(@total_credit) %></td>
              <td style="text-align:right;"><%= number_with_delimiter(@total_debit - @total_credit) %></td>
            </tr>
          </tfoot>
        <% end %>
      </table>
    </div>

    <div class="actions" style="margin-top:12px;">
      <%= link_to "仕訳帳を開く", journal_book_path, class: "btn btn-sm btn-block" %>
      <%= link_to "会計メニューに戻る", accounting_menu_path, class: "btn btn-outline btn-sm btn-block" %>
    </div>
  </div>
</div>
