<div class="auth">
  <h2 class="auth-title">アカウント設定</h2>

  <h3 class="auth-subtitle">メールアドレス変更</h3>
  <%= form_with url: email_account_path, method: :patch, local: true, class: "form" do %>
    <div class="field">
      <label>現在のメールアドレス: <%= current_user.email %></label>
    </div>
    <div class="field">
      <label for="email">新しいメールアドレス</label>
      <input type="email" id="email" name="email" placeholder="name@example.com" required>
    </div>
    <div class="actions">
      <button type="submit" class="btn">メールアドレスを更新</button>
    </div>
  <% end %>

  <hr style="margin:16px 0;">

  <h3 class="auth-subtitle">パスワード変更</h3>
  <%= form_with url: password_account_path, method: :patch, local: true, class: "form" do %>
    <div class="field">
      <label for="password">新しいパスワード（6文字以上）</label>
      <input type="password" id="password" name="password" minlength="6" required>
    </div>
    <div class="field">
      <label for="password_confirmation">新しいパスワード（確認）</label>
      <input type="password" id="password_confirmation" name="password_confirmation" minlength="6" required>
    </div>
    <div class="actions">
      <button type="submit" class="btn">パスワードを更新</button>
    </div>
  <% end %>

  <div class="links" style="margin-top:16px;">
    <%= link_to "メニューに戻る", authenticated_root_path %>
  </div>
</div>
