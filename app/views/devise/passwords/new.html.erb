<div class="auth">
    <h1>パスワード設定／再発行</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form" }, method: :post) do |f| %>
    <%= render "shared/error_messages", object: resource %>

    <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
    </div>

    <div class="actions">
        <%= f.submit "メール送信", class: "btn" %>
    </div>
    <% end %>

    <div class="links">
        <%= link_to "ログインへ戻る", new_session_path(resource_name) %> ・
    </div>
</div>