<div class="auth">
  <h2 class="auth-title">メール/パスワード変更</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "name@example.com" %>
    </div>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワード(確認)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する", class: "btn" %>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "戻る", authenticated_root_path %>
  </div>
</div>
