<% content_for :title, "ログイン" %>

<div class="page">
  <div class="auth">
    <h2 class="auth-title">ログイン</h2>

    <%= render "shared/error_messages", object: resource %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox">
          <label>
            <%= f.check_box :remember_me %>
            次回から自動的にログイン
          </label>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn" %>
      </div>
    <% end %>

    <div class="links">
      <%= link_to "ユーザー登録", new_user_registration_path %> ・
      <%= link_to "パスワード再設定", new_user_password_path %>
    </div>
  </div>
</div>
