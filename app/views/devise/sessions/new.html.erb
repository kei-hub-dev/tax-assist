<% content_for :title, "ログイン" %>

<div class="page">
  <div class="narrow">
    <div class="auth">
      <h2 class="auth-title">ログイン</h2>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field checkbox">
            <%= f.check_box :remember_me, id: 'remember_me' %>
            <%= f.label :remember_me, "次回から自動的にログイン" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn" %>
        </div>
      <% end %>

      <div class="actions">
        <% if ENV["GOOGLE_CLIENT_ID"].present? && ENV["GOOGLE_CLIENT_SECRET"].present? %>
          <%= button_to "Googleログイン",
                        user_google_oauth2_omniauth_authorize_path,
                        method: :post,
                        data: { turbo: false },
                        class: "btn btn-outline" %>
        <% else %>
          <button type="button" class="btn btn-outline" disabled>Googleログイン（設定待ち）</button>
        <% end %>
      </div>

      <div class="links">
        <%= link_to "ユーザー登録", new_user_registration_path %> ・
        <%= link_to "パスワード再設定", new_user_password_path %>
      </div>
    </div>
  </div>
</div>
