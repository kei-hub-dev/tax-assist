<% if resource.errors.any? %>
  <% I18n.with_locale(:ja) do %>
    <% flash.now[:alert] = [
      t('errors.messages.not_saved',
        count: resource.errors.count,
        resource: resource.class.model_name.human),
      resource.errors.full_messages.to_sentence
    ].join(' ') %>
  <% end %>
<% end %>