<% content_for :title, "勘定科目マスタ" %>

<div class="page">
  <h1 class="page-title">勘定科目マスタ</h1>

  <div class="actions mb-12">
    <%= link_to "新規追加", new_account_path, class: "btn btn-sm" %>
    <%= link_to "戻る", authenticated_root_path, class: "btn btn-outline btn-sm" %>
  </div>

  <% subs = I18n.t("accounts.sub_categories") %>

  <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th>区分</th>
          <th>サブ区分</th>
          <th>科目名</th>
          <th class="actions-col text-right">操作</th>
        </tr>
      </thead>
      <tbody>
        <% if @accounts.any? %>
          <% @accounts.each do |account| %>
            <tr>
              <td><%= I18n.t("accounts.categories.#{account.category}", default: account.category) %></td>
              <td><%= subs.dig(account.category.to_s, account.sub_category.to_s) || "-" %></td>
              <td><%= account.name %></td>
              <td class="actions-cell nowrap">
                <%= link_to "編集", edit_account_path(account), class: "btn btn-sm btn-inline" %>
                <%= button_to "削除", account_path(account),
                      method: :delete,
                      form: { class: "inline", data: { turbo_confirm: "削除しますか？" } },
                      class: "btn btn-outline btn-sm btn-inline" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="text-center text-muted">登録された勘定科目はありません</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
